<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F5F5F5;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pi.approximators.PICalculatorController">
    <children>
        <MenuBar fx:id="menuBar" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                 AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
            <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#handleClickOnCloseMenuItem"
                                  text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Calculators">
                    <items>
                        <MenuItem fx:id="basicCalculator" mnemonicParsing="false" onAction="#switchToBasicCalculator"
                                  text="Basic"/>
                        <MenuItem fx:id="advancedCalculator" mnemonicParsing="false"
                                  onAction="#switchToAdvancedCalculator" text="Advanced"/>
                        <MenuItem fx:id="piCalculator" mnemonicParsing="false" text="PI"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Converters">
                    <items>
                        <MenuItem fx:id="volumeConverter" mnemonicParsing="false" onAction="#switchToVolumeConverter"
                                  text="Volume"/>
                        <MenuItem fx:id="lengthConverter" mnemonicParsing="false" onAction="#switchToLengthConverter"
                                  text="Length"/>
                        <MenuItem fx:id="weightConverter" mnemonicParsing="false" onAction="#switchToWeightConverter"
                                  text="Weight"/>
                        <MenuItem fx:id="temperatureConverter" mnemonicParsing="false"
                                  onAction="#switchToTemperatureConverter" text="Temperature"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="396.0" prefWidth="600.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="40.0">
            <children>
                <TextArea fx:id="screen" prefHeight="200.0" prefWidth="200.0" promptText="0" wrapText="true">
                    <font>
                        <Font name="Segoe UI Symbol" size="25.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </TextArea>
                <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="150.0"
                          prefWidth="1000.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                           prefWidth="340.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="275.20001220703125" minWidth="10.0"
                                           prefWidth="217.39996337890625"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                mnemonicParsing="false" onAction="#handleCalculation" text="Calculate"
                                GridPane.columnIndex="1" disable="true" fx:id="calcBtn">
                            <font>
                                <Font name="Segoe UI Semibold" size="30.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets bottom="25.0" left="20.0" right="20.0" top="25.0"/>
                            </GridPane.margin>
                        </Button>
                        <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="188.0" minWidth="10.0"
                                                   prefWidth="170.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="172.4000244140625" minWidth="10.0"
                                                   prefWidth="170.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Method: ">
                                    <font>
                                        <Font name="Segoe UI Symbol" size="25.0"/>
                                    </font>
                                </Label>
                                <ComboBox fx:id="methodCb" maxHeight="1.7976931348623157E308"
                                          maxWidth="1.7976931348623157E308" onAction="#handleCb" prefWidth="150.0"
                                          promptText="Select" GridPane.columnIndex="1">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Chudnovsky"/>
                                            <String fx:value="Zeta"/>
                                            <String fx:value="Leibniz"/>
                                            <String fx:value="BPP"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                <Label text="Iterations:" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="Segoe UI Symbol" size="25.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="iterationTb" promptText="0" GridPane.columnIndex="1"
                                           GridPane.halignment="CENTER" GridPane.rowIndex="1"
                                           GridPane.valignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI Symbol" size="20.0"/>
                                    </font>
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <GridPane GridPane.columnSpan="2" GridPane.rowIndex="2">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="From:">
                                            <font>
                                                <Font name="Segoe UI Symbol" size="25.0"/>
                                            </font>
                                        </Label>
                                        <Label text="To:" GridPane.columnIndex="2" GridPane.halignment="LEFT"
                                               GridPane.valignment="CENTER">
                                            <font>
                                                <Font name="Segoe UI Symbol" size="25.0"/>
                                            </font>
                                            <GridPane.margin>
                                                <Insets left="15.0"/>
                                            </GridPane.margin>
                                        </Label>
                                        <TextField disable="true" fx:id="fromTb" promptText="0" text="0" GridPane.columnIndex="1">
                                            <font>
                                                <Font name="Segoe UI Symbol" size="20.0"/>
                                            </font>
                                            <GridPane.margin>
                                                <Insets right="10.0"/>
                                            </GridPane.margin>
                                        </TextField>
                                        <TextField disable="true" fx:id="untilTb" layoutX="100.0" text="0" layoutY="16.0" promptText="0"
                                                   GridPane.columnIndex="3">
                                            <font>
                                                <Font name="Segoe UI Symbol" size="20.0"/>
                                            </font>
                                            <GridPane.margin>
                                                <Insets right="10.0"/>
                                            </GridPane.margin>
                                        </TextField>
                                    </children>
                                </GridPane>
                            </children>
                        </GridPane>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </children>
</AnchorPane>
